<div class="row">
  <!-- Main Content Section -->
  <section class="main col-md-9">
    <div class="item card mb-4 shadow-sm">
      <div class="row g-0">
        <div class="col-md-4">
          <img
            src="https://dummyimage.com/847x320/d9d9d9/545454.jpg"
            alt="Feature Image"
            class="img-fluid rounded-start"
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h2 class="card-title">Item Title</h2>
            <p class="card-text">
              Massa non ante bibendum ullamcorper. Duis cursus, diam at pretium
              aliquet, metus urna convallis erat, eget tincidunt dui augue eu
              tellus. Phasellus elit pede, malesuada vel, venenatis vel,
              faucibus id, libero. Donec consectetuer mauris id sapien. Cras
              dolor dolor, tempus non, lacinia at, iaculis quis, pede.
            </p>
            <p>
              <strong>Price:</strong> $00.00<br />
              <strong>Category:</strong> 3<br />
              <strong>Last Updated:</strong> 03/17/2023
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sidebar Section -->
  <aside class="col-md-3">
    <!-- User Actions -->
    <div class="user-actions mb-4">
      <% if (session.user) { %>
        <div class="mb-3">
          <a href="/userHistory" class="btn btn-info w-100">
            <i class="fas fa-history"></i> View Login History
          </a>
        </div>
        <div class="mb-3">
          <a href="/logout" class="btn btn-danger w-100">
            <i class="fas fa-sign-out-alt"></i> Logout
          </a>
        </div>
      <% } else { %>
        <div class="mb-3">
          <a href="/login" class="btn btn-primary w-100">
            <i class="fas fa-sign-in-alt"></i> Login
          </a>
        </div>
        <div class="mb-3">
          <a href="/register" class="btn btn-success w-100">
            <i class="fas fa-user-plus"></i> Register
          </a>
        </div>
      <% } %>
    </div>

    <!-- Items List -->
    <div class="mb-4">
      <h4 class="text-primary">Items</h4>
      <ul class="list-group">
        <a href="#" class="list-group-item list-group-item-action">Item 1</a>
        <a href="#" class="list-group-item list-group-item-action">Item 2</a>
        <a href="#" class="list-group-item list-group-item-action">etc...</a>
      </ul>
    </div>

    <!-- Categories List -->
    <div class="mb-4">
      <h4 class="text-primary">Categories</h4>
      <ul class="list-group">
        <a href="#" class="list-group-item list-group-item-action">Category 1</a>
        <a href="#" class="list-group-item list-group-item-action">Category 2</a>
        <a href="#" class="list-group-item list-group-item-action">etc...</a>
      </ul>
    </div>
  </aside>
</div>
