<h2>Items List</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Price</th>
            <th>Published</th>
            <th></th> 
        </tr>
    </thead>
    <tbody>
        {{#each items}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.category}}</td>
            <td>{{this.price}}</td>
            <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
            <td>
                <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{#if message}}
<p>{{message}}</p>
{{/if}}