<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/main.css">
    <title><%= title %></title>
</head>
<body>
    <div class="row">
        <div class="col-md-12">
            <h2><%= title %></h2>
            <hr />
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item ID</th>
                            <th>Title</th>
                            <th>ItemDate</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Published</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (items && items.length > 0) { %>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td><%= item.id %></td>
                                    <td><%= item.title %></td>
                                    <td><%= item.itemDate %></td>
                                    <td><%= item.price %></td>
                                    <td><a href="/items?category=<%= item.categoryId %>"><%= item.category %></a></td>
                                    <td><%= item.published ? 'Yes' : 'No' %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="6" class="text-center"><%= message || "No items available." %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
